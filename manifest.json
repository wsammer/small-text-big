{
  "name": "Small Text Big",
  "description": "Makes website text larger and readable.",
  "version": "1.3.2",
  "author": "Sammer",
  "permissions": [
   "tabs",
   "storage"
  ],
  "host_permissions": [
   "*://*/*",
   "file:///*"
  ],
  "content_scripts": [{
    "js": [
      "src/pageAction_options.js",
      "src/enable.js",
      "src/options.js"
      ],
    "matches": [
     "*://*/*",
     "file:///*"
    ],
    "all_frames": true,
    "run_at": "document_end",
    "match_about_blank": true
  }],
  "background": {
    "service_worker": "src/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false,
    "open_in_tab": false
  },
  "action": {
    "default_icon": {
      "128": "assets/icons/halo.png"
    },
    "default_title": "Manage Small Text Big for this website",
    "default_popup": "pageAction_popup.html",
    "browser_style": true
  },
 "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Ctrl+7",
        "mac": "Command+7"
      },
      "description": "Toggle Small Text Big setting",
      "global": true
    }
  },
  "icons": {
   "128": "assets/icons/halo.png"
  },
  "manifest_version": 3
}
